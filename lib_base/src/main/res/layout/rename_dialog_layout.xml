<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/rename_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:letterSpacing="0.2"
        android:layout_marginTop="@dimen/main_margin"
        android:padding="@dimen/texts_padding"
        android:text="@string/dialog_rename"
        android:textColor="@color/black"
        android:textSize="@dimen/small_title_text"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/rename_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/main_margin"
        android:autofillHints="name.jpg"
        android:background="@color/background_white"
        android:gravity="center"
        android:hint="@string/enter"
        android:inputType="text"
        android:lines="1"
        android:padding="@dimen/texts_padding"
        android:scrollHorizontally="true"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:textColor="@color/red" />

        <Button
            android:id="@+id/confirm"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/confirm"
            android:textColor="@color/main_color1" />

    </LinearLayout>

</LinearLayout>