<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_icon">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/main_margin"
            app:cardCornerRadius="@dimen/small_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/log_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:letterSpacing="0.02"
                    android:lines="1"
                    android:padding="@dimen/texts_padding"
                    android:textColor="@color/black"
                    android:textSize="@dimen/small_title_text" />

                <ImageView
                    android:id="@+id/log_watch"
                    android:layout_width="@dimen/action_icon_p"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_ripple_transparent_white"
                    android:contentDescription="@string/action"
                    android:padding="@dimen/icon_padding"
                    android:src="@drawable/ic_round_pageview_24" />

                <ImageView
                    android:id="@+id/log_share"
                    android:layout_width="@dimen/action_icon_p"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_ripple_transparent_white"
                    android:contentDescription="@string/action"
                    android:padding="@dimen/icon_padding_mid"
                    android:src="@drawable/ic_round_share_24" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
