<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.protone.ui.view.customView.musicPlayer.MusicPlayerViewMid
            android:id="@+id/rich_music"
            android:layout_width="match_parent"
            android:layout_height="@dimen/music_player_mid"
            android:background="@color/white"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toTopOf="@id/rich_linkContainer" />

        <FrameLayout
            android:id="@+id/rich_linkContainer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_icon"
            android:background="@color/foreDark"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/rich_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:letterSpacing="0.02"
                android:textColor="@color/white"
                android:textSize="@dimen/small_title_text"
                android:textStyle="bold" />

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
